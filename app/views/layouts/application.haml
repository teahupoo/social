%html
  %head
    %title Social
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "index"} Social Network
          .nav-collapse
            %ul.nav
              %li.home= link_to("home",   { :controller => "/site", :action => "index"})
              %li.about= link_to("about", { :controller => "/site", :action => "about"})
              %li.help= link_to("help",   { :controller => "/site", :action => "help"}) 

    = yield